<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="status"/>
                    <field name="validity_days"/>
                    <field name="deadline_date"/>
                </group>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_treeview" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="validity_days"/>
                <field name="deadline_date"/>
                <button name="accept_offer" type="object" title="Offre acceptée" icon="fa-check" />
                <button name="refuse_offer" type="object" title="Offre refusée" icon="fa-times" />
                <field name="status"/>
            </tree>
        </field>
    </record>

</odoo>
